extends ../layouts/main-layout

block content
    form(action="/shops/"+shop._id, method="post").border.text-center.w-full
        input(type="hidden", name="_csrf", value=csrfToken)
        div.py-2
            label(for="name").px-2 Shop Name
            input(
                value=shop.name,
                type="text", 
                id="name", 
                name="name",
                class="border-b-2 px-2 border-gray-light rounded focus:border focus:border-blue")
        div.py-2
            label(for="shopemail").px-2 Shop Email
            input(
                value=shop.email,
                type="text", 
                id="email", 
                name="email",
                class="border-b-2 px-2 border-gray-light rounded focus:border focus:border-blue")
        if loggedInUser.isAdmin 
            //- TODO: ^ or loggedInUser.canManage
            div.py-2
                label(for="password").px-2 Password
                input(
                    value=shop.password,
                    type="text", 
                    id="password", 
                    name="password",
                    class="border-b-2 px-2 border-gray-light rounded focus:border focus:border-blue")
        button(type="submit") Update Shop
    form(action="/shops/"+shop._id+"/delete", method="post")
        input(type="hidden", name="_csrf", value=csrfToken)
        button(type="submit").p-2.bg-red-lightest.rounded-full.text-sm Delete Shop