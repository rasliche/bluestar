extends ../layouts/main-layout.pug

block content
    .quiz-cards.flex.flex-wrap
        each quiz in quizzes
            .quiz-card.w-64.bg-blue-lightest.rounded
                a(href="/quizzes/"+quiz._id) #{quiz.title}
                if loggedInUser.isAdmin
                        | (#{quiz})
                        | #[a(href="/quizzes/"+quiz._id+"/edit").text-sm Edit]
        else
            .quiz-card.w-64.bg-blue-lightest.rounded
                p More coming soon...
                