extends ../layouts/main-layout.pug

block content
    div#login-form.text-center
        if !!errorMessage
            p.border.border-red= errorMessage
        form(action="/reset", method="post")
            input(type="hidden", name="_csrf", value=csrfToken)
            div.py-2
                label(for="email") Email 
                input(type="text", 
                    name="email", 
                    id="email", 
                    placeholder="john.doe@gmail.com",
                    class="border-b-2 border-gray-light rounded focus:border focus:border-blue")
            button(
                type="submit",
                class="border-2 p-1 rounded border-blue") Reset Password